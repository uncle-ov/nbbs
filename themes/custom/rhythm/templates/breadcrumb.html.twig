{#
/**
 * @file
 * Default theme implementation for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 *
 * @ingroup themeable
 */
#}
{% if breadcrumb %}
  
  <h2 id="system-breadcrumb" class="visually-hidden">{{ 'Breadcrumb'|t }}</h2>
  {% for item in breadcrumb %}
      {% if item.url %}
        <a href="{{ item.url }}">{{ item.text }}</a><i> / </i>
      {% else %}
        {{ item.text }}<i> / </i>
      {% endif %}
  {% endfor %}
{% endif %}